{
    "compilerOptions": {
      "target": "ES2018",
      "module": "ES2020",
      "moduleResolution": "Node",
      "lib": [
        "ESNext",
        "ESNext.AsyncIterable",
        "DOM"
      ],
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "strict": true,
      "noEmit": true,
      "typeRoots": ["types"],
      "baseUrl": ".",
      "paths": {
        "~/*": [
          "./*"
        ],
        "@/*": [
          "./*"
        ]
      },
      "types": [
        "@types/node",
        "@nuxt/types", 
        "@nuxtjs/axios"
      ]
    },
    "exclude": [
      "node_modules"
    ]
  }